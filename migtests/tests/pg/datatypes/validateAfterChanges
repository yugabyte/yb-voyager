#!/usr/bin/env python3

import common
import os
import yb

#=============================================================================

def is_grpc_connector():
    """Check if gRPC connector is being used"""
    return os.environ.get('USE_YB_GRPC_CONNECTOR', 'false').lower() == 'true'

#=============================================================================
